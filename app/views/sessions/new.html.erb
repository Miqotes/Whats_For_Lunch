<br>
<h1>Sign In</h1>
<% if flash[:message] %>
	<p><%= flash[:message] %></p>
<% end %>
<br>
<div id="signin_form">
<%= form_with url: '/login' do %>
	<%= label_tag :username %>
	<%= text_field_tag :username %>

	<%= label_tag :password %>
	<%= password_field_tag :password %>

	<%= submit_tag "Sign in" %>
<% end %>
</div>